<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/ic_home_black_24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/main_serialNumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/nav_header_text_size"
            android:padding="0dp"
            android:text="@string/header_main"
            android:layout_alignParentBottom="true" />

        <Button
            android:id="@+id/text_Disconnect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:onClick="onClickDisconnect"
            android:padding="0dp"
            android:text="@string/Button_disconnect"
            android:textColor="@color/colorTextBase"
            android:textSize="@dimen/nav_header_text_size"
            android:background="@android:color/transparent"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

    </RelativeLayout>

</LinearLayout>
